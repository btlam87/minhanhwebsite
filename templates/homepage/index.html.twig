                </div>
            </div>
        </div>
    </div>
    <!--Bài viết -->
    <div class="container-fluid padding p-4 minhanhbg">
    <div class="container-md">
        <div class="row col-md-12">
        <div class="col-12 text-center">
            <h2 class="minhanhcolor color-white ">Kinh nghiệm học Anh Văn</h2>
        </div>

        <div class="row col-md-12 col-s-12 pt-3 mx-auto">
        {% for article in article_list|slice(0,6) %}

            <div class="col-s-12 col-xs-12 col-md-6 col-lg-6 d-inline mt-15">
                <div class="w-100 h-100 border rounded shadow-sm bg-light">

                    <div class="col-s-12 col-md-12 col-lg-12 col-xl-6 float-left mtb-15">
                    <img class="w-100" src="uploads/images/{{article.getThumb()}}" alt="">
                    </div>

                    <div class="col-s-12 col-md-12 col-lg-12 col-xl-6 float-right mtb-15">
                        <a href="/Kinh-nghiem-hoc-anh-van/{{ article.getSkill().id() }}" class="minhanh_blue_link">{{ article.getSkill() }}: </a>
                        <a href="/Kinh-nghiem-hoc-anh-van/{{ article.getSkill().id() }}/{{ article.getId() }}" class="minhanh_black_link_big">{{ article.getName() }}</a>
                        <p>{{ article.getCreatedate()|date('d-m-Y') }}</p>
                        <p>{{  article.getDescription()[0:54] }}</p>
                    </div>
                </div>
            </div>

        {% endfor %}
        </div>
        <div class="col-12 text-center pt-4" >
            <a class="" href="{{ path('skills') }}"><button type="button" class="btn btn-success">Xem thêm kinh nghiệm học Anh Văn</button></a>
