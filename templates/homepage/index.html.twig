                            <div class="row">
                            {% for student in student_list %}
                                <div class="col-md-3 text-center">
                                <i class="fas fa-bold"><img class="rounded-circle w-25" src="uploads/images/{{ student.getThumb() }}" alt=""></i>
                                <p class="font-weight-bold">{{ student.getName() }}</p>
                                <p><label class="">{{ student.getCourse() }} &nbsp</label><a href="#" class="badge badge-success">{{ student.getPoint() }}</a></p>
                                </div>
                             {% endfor %}    
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="row">
                            {% for student in student_list %}
                                <div class="col-md-3 text-center">
                                <i class="fas fa-bold"><img class="rounded-circle w-25" src="uploads/images/{{ student.getThumb() }}" alt=""></i>
                                <p class="font-weight-bold">{{ student.getName() }}</p>
