                                </div>
                             {% endfor %}    
                            </div>
                        </div>
                    {% endif %}

                    {% if student_list|length > 4  %}
                        <div class="carousel-item active">
                            <div class="row">
                            {% for student in student_list|slice(0, 4) %}
                                <div class="col-md-3 text-center">
                                <i class="fas fa-bold"><img class="rounded-circle w-25" src="uploads/images/{{ student.getThumb() }}" alt=""></i>
                                <p class="font-weight-bold">{{ student.getName() }}</p>
                                <p><label class="">{{ student.getCourse() }} &nbsp</label><a href="#" class="badge badge-success">{{ student.getPoint() }}</a></p>
                                </div>
                             {% endfor %}    
                            </div>
                        </div>

                        {% set block = student_list|length // 4 %}
                            {% for i in 1..(block-1) %}
                                <div class="carousel-item">
                                <div class="row">
                                {% for student in student_list|slice(4*i,4*i+3) %}
                                    <div class="col-md-3 text-center">
                                    <i class="fas fa-bold"><img class="rounded-circle w-25" src="uploads/images/{{ student.getThumb() }}" alt=""></i>
                                    <p class="font-weight-bold">{{ student.getName() }}</p>
                                    <p><label class="">{{ student.getCourse() }} &nbsp</label><a href="#" class="badge badge-success">{{ student.getPoint() }}</a></p>
                                    </div>
                                {% endfor %}    
                                </div>
                            </div>
                        {% endfor %}
                        
                    {% endif %}
