{% extends 'base.html.twig' %}
{% block meta %}
{% block meta %}
<meta name="Keywords" content="{{ schedule.getKeywords() }} ">
<meta name="description" content="{{ schedule.getDescription() }} ">
<meta name="author" content="{{ schedule.getAuthor() }} ">
{% endblock %}

{% endblock %}
{% block title %}Lịch khai giảng trung tâm ngoại ngữ Minh Anh {% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage')}}">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Lịch khai giảng trung tâm ngoại ngữ Minh Anh</li>
  </ol>
</nav>

<div class="container-md">
  <div class="article_header">
    <h1 class="article_title_big">{{ schedule.getName() }}</h1>
  </div>
  <div class="article_info text-center">
    <p>
      <label class="article_info">Nguồn: &nbsp</label>
      <label class="article_info">{{ schedule.getAuthor() }}</label>
      <label class="article_info">&nbsp/&nbsp</label>
      <label class="article_info">{{ schedule.getCreatedate()|date('d-m-Y') }}</label></p>

  </div>
  <div class="article_body ">
      <p>
      {{ schedule.getDescription() }}
      </p>
      <br/>
      <img class="img-fluid" src="/uploads/images/{{ schedule.getThumb() }}" alt="">
      <br/>
      <br/>
      <div id="content" class="article_content">
        {% autoescape 'html' %}
            {{ schedule.getContent()|raw }} 
           
        {% endautoescape %}
      </div>
      <p><label class="article_info">Nguồn: &nbsp {{ schedule.getAuthor() }}</label></p> 
      <hr>   

  </div>
  </div>
{% endblock %}
